# HT Status - Staging Environment Configuration
# Copy this file to .env for staging deployment

# ================================
# Environment Configuration
# ================================
FLASK_ENV=staging
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
LOCAL_RUN=false

# ================================
# Application Settings
# ================================
APP_NAME=HT Status Staging
SECRET_KEY=REQUIRED-generate-secure-key-for-staging
DEBUG_LEVEL=1

# ================================
# Hattrick CHPP API Configuration
# ================================
# Staging: Use dedicated staging CHPP app if available
CONSUMER_KEY=REQUIRED-your-staging-consumer-key
CONSUMER_SECRETS=REQUIRED-your-staging-consumer-secret
CALLBACK_URL=https://your-staging-domain.com/login
CHPP_URL=https://chpp.hattrick.org/chppxml.ashx

# ================================
# Database Configuration (Staging)
# ================================
# Use managed database service or dedicated staging database
POSTGRES_DB=htplanner_staging
POSTGRES_USER=htstatus_staging
POSTGRES_PASSWORD=REQUIRED-secure-staging-password
POSTGRES_HOST=your-staging-db-host.com
POSTGRES_PORT=5432

# Database URL for SQLAlchemy
DATABASE_URL=postgresql://htstatus_staging:SECURE_PASSWORD@your-staging-db-host.com:5432/htplanner_staging

# Test Database (for staging environment tests)
TEST_POSTGRES_DB=htplanner_staging_test
TEST_DATABASE_URL=postgresql://htstatus_staging:SECURE_PASSWORD@your-staging-db-host.com:5432/htplanner_staging_test

# ================================
# Redis Configuration (Staging)
# ================================
REDIS_HOST=your-staging-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=REQUIRED-secure-redis-password
REDIS_URL=redis://:SECURE_REDIS_PASSWORD@your-staging-redis-host.com:6379/0

# ================================
# Staging-Specific Settings
# ================================
# Optional: Basic authentication for staging environment
STAGING_AUTH_USERNAME=staging_user
STAGING_AUTH_PASSWORD=REQUIRED-basic-auth-password

# Optional: Staging-specific feature flags
ENABLE_DEBUG_ROUTES=false
ENABLE_ADMIN_FEATURES=true

# ================================
# Monitoring and Logging
# ================================
# Log level for staging (0=none, 1=info, 2=debug)
LOG_LEVEL=1
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# ================================
# Deployment Configuration (Staging)
# ================================
# Staging deployment settings
DEPLOY_SERVER=your-staging-server.com
DEPLOY_USER=your-staging-user
BACKUP_SERVER=your-staging-backup-server.com
POSTGRES_CONTAINER=htplanner_postgres_staging

# ================================
# Security Settings
# ================================
# Session configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# ================================
# Deployment Configuration (Staging)
# ================================
# Staging deployment settings
DEPLOY_SERVER=your-staging-server.com
DEPLOY_REPO_PATH=~/staging/htstatus
DEPLOY_PYTHON_ENV=~/staging/htstatus/venv/bin/activate
DEPLOY_GIT_BRANCH=origin/staging
