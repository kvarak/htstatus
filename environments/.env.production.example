# HT Status - Production Environment Configuration
# SECURITY WARNING: This file contains template values only!
# Copy to .env and replace ALL placeholder values with secure production values

# ================================
# Environment Configuration
# ================================
FLASK_ENV=production
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
LOCAL_RUN=false

# ================================
# Application Settings
# ================================
APP_NAME=HT Status
SECRET_KEY=REQUIRED-generate-strong-secret-key-32-chars-minimum
DEBUG_LEVEL=0

# ================================
# Hattrick CHPP API Configuration
# ================================
# Production: Use your verified production CHPP application
CONSUMER_KEY=REQUIRED-your-production-consumer-key
CONSUMER_SECRETS=REQUIRED-your-production-consumer-secret  
CALLBACK_URL=https://yourdomain.com/login
CHPP_URL=https://chpp.hattrick.org/chppxml.ashx

# ================================
# Database Configuration (Production)
# ================================
# SECURITY: Use managed database service with SSL
POSTGRES_DB=htplanner_prod
POSTGRES_USER=htstatus_prod
POSTGRES_PASSWORD=REQUIRED-very-secure-database-password
POSTGRES_HOST=your-prod-db-host.com
POSTGRES_PORT=5432

# Database URL for SQLAlchemy (with SSL)
DATABASE_URL=postgresql://htstatus_prod:SECURE_PASSWORD@your-prod-db-host.com:5432/htplanner_prod?sslmode=require

# Test Database (should be separate from production)
TEST_POSTGRES_DB=htplanner_prod_test
TEST_DATABASE_URL=postgresql://htstatus_prod:SECURE_PASSWORD@your-prod-db-host.com:5432/htplanner_prod_test?sslmode=require

# ================================
# Redis Configuration (Production)
# ================================
REDIS_HOST=your-prod-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=REQUIRED-very-secure-redis-password
REDIS_URL=redis://:SECURE_REDIS_PASSWORD@your-prod-redis-host.com:6379/0

# ================================
# Security Settings (CRITICAL)
# ================================
# Session security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=1800

# Force HTTPS
FORCE_SSL=true
SSL_REDIRECT=true

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'

# ================================
# Monitoring and Logging
# ================================
# Production logging (0=errors only)
LOG_LEVEL=0
SENTRY_DSN=REQUIRED-your-production-sentry-dsn

# Health check endpoints
HEALTH_CHECK_TOKEN=REQUIRED-random-token-for-health-checks

# ================================
# Performance Settings
# ================================
# Database connection pooling
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_POOL_TIMEOUT=20
SQLALCHEMY_POOL_RECYCLE=3600
SQLALCHEMY_MAX_OVERFLOW=20

# Redis connection pooling
REDIS_POOL_SIZE=10

# ================================
# Backup and Maintenance
# ================================
# Backup settings (if using automated backups)
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=REQUIRED-backup-encryption-key

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress

# ================================
# IMPORTANT SECURITY NOTES
# ================================
# 1. Replace ALL 'REQUIRED-' values with actual secure values
# 2. Use environment-specific secrets management (AWS Secrets Manager, Azure Key Vault, etc.)
# 3. Never commit production credentials to version control
# 4. Rotate all secrets regularly
# 5. Use SSL/TLS for all external connections
# 6. Enable database SSL with certificate verification
# 7. Implement proper backup encryption
# 8. Set up monitoring and alerting for security events