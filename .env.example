# HT Status Environment Configuration
# Copy this file to .env and update values for your environment

# ================================
# Application Settings
# ================================
FLASK_ENV=development
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
LOCAL_RUN=true

# Application Configuration
APP_NAME=HT Status Development
SECRET_KEY=your-development-secret-key-change-this
DEBUG_LEVEL=3

# ================================
# Hattrick CHPP API Configuration
# ================================
# Get these from: https://chpp.hattrick.org/
CONSUMER_KEY=your-consumer-key
CONSUMER_SECRETS=your-consumer-secret
CALLBACK_URL=http://localhost:5000/login
CHPP_URL=https://chpp.hattrick.org/chppxml.ashx

# ================================
# Database Configuration
# ================================
# PostgreSQL (Docker Compose)
POSTGRES_DB=htplanner
POSTGRES_USER=htstatus
POSTGRES_PASSWORD=development
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL for SQLAlchemy
DATABASE_URL=postgresql://htstatus:development@localhost:5432/htplanner

# Test Database (separate for testing)
TEST_POSTGRES_DB=htplanner_test
TEST_DATABASE_URL=postgresql://htstatus:development@localhost:5432/htplanner_test

# ================================
# Redis Configuration (Task 4.1 prep)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=development
REDIS_URL=redis://:development@localhost:6379/0

# ================================
# Development Tools
# ================================
# pgAdmin (use with: docker-compose --profile admin up)
PGADMIN_EMAIL=admin@htstatus.local
PGADMIN_PASSWORD=development
PGADMIN_PORT=5050

# ================================
# Production Settings (for later use)
# ================================
# These will be used in production deployment
# POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
# SECRET_KEY_FILE=/run/secrets/secret_key
# SSL_CERT_PATH=/etc/ssl/certs/htstatus.crt
# SSL_KEY_PATH=/etc/ssl/private/htstatus.key

# ================================
# Deployment Configuration
# ================================
# Deployment server and paths - configure for your deployment target
DEPLOY_SERVER=your-deployment-server
DEPLOY_REPO_PATH=~/repos/htstatus
DEPLOY_PYTHON_ENV=~/your-python-env/bin/activate
DEPLOY_GIT_BRANCH=origin/master
